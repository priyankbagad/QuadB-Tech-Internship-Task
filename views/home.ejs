     <link rel="stylesheet" href="styles.css">
    <title>Hodlinfo</title>
  </head>
  <body style="background-color:#073256;">
    <nav class="navbar navbar-expand-lg navbar-light bg-dark" style="background-color: #073256;">
  <p style="font-size: xx-large; margin-left: 20px; font-family: Arial, Helvetica, sans-serif;color: white;">HODLINFO</p> 
  <p style="display:flex; color: white;">.com</p>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  
    </ul>
    <form class="form-inline my-4 my-lg-0">
      <button class="btn btn-outline-success my-6 my-sm-3" style="margin-left: 900px; background-color: rgb(26, 204, 216); color: white;" type="submit">Connect Telegram</button>
    </form>
  </div>
</nav>
<table class="table table-borderless table-dark" style="height: 500px;">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">name</th>
      <th scope="col">Last</th>
      <th scope="col">Buy/Sell Price</th>
      <th scope="col">Volume</th>
      <th scope="col">base_unit</th>
    </tr>
  </thead>
  <tbody>
    <% var c = 1 %>
    <% answers.forEach((answer)=> { %>
     
    <tr class="table-active">
      <th scope="row"><%=c %></th>
      <td><%= answer.name %></td>
      <td><%= answer.last %></td>
      <td><%= answer.buy %> / <%= answer.sell %></td>
      <td><%= answer.volume %></td>
      <td><%= answer.base_unit %></td>
    </tr>
     <% c++; }) %>
    
  </tbody>
</table>


